@model asp_autonews.Domain.Entities.Article
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeywords;
}

<div>
    <h1>@Model.Title</h1>
    <h2>@Model.Subtitle</h2>
    <div >
        <img  src="~/img/@Model.Image" alt="Картинка не загрузилась :(">
    </div>
</div>
<div>
    @Html.Raw(Model.Text)
</div>
